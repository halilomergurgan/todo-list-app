<!DOCTYPE html>
<html>
<head>
  <title>TodoListApp</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <!-- AdminLTE CSS -->
  <%= stylesheet_link_tag "/adminlte/dist/css/adminlte.css" %>
  <%= stylesheet_link_tag "/adminlte/plugins/fontawesome-free/css/all.css" %>

  <!-- Rails Default CSS -->
  <%= stylesheet_link_tag "application", media: "all" %>
</head>

<body class="hold-transition sidebar-mini">
<div class="wrapper">

  <!-- Navbar -->
  <nav class="main-header navbar navbar-expand navbar-white navbar-light">
    <!-- Left navbar links -->
    <ul class="navbar-nav">
      <li class="nav-item">
        <%= link_to 'Ana Sayfa', root_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Yeni Görev', new_todo_path, class: 'nav-link' %>
      </li>
      <li class="nav-item">
        <%= link_to 'Tüm Görevler', todos_path, class: 'nav-link' %>
      </li>
    </ul>

    <!-- Right navbar links -->
    <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to 'Çıkış', destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to 'Giriş', new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= link_to 'Kayıt Ol', new_user_registration_path, class: 'nav-link' %>
        </li>
      <% end %>
    </ul>
  </nav>

  <!-- Main Content -->
  <div class="content-wrapper">
    <%= yield %>
  </div>

</div>

<!-- AdminLTE JS -->
<%= javascript_include_tag "/adminlte/plugins/jquery/jquery.js" %>
<%= javascript_include_tag "/adminlte/plugins/bootstrap/js/bootstrap.bundle.js" %>
<%= javascript_include_tag "/adminlte/dist/js/adminlte.js" %>

<!-- Rails Default JS -->
<%= javascript_include_tag "application" %>
</body>
</html>
