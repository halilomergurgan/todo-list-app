<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">Edit Todo</h3>
  </div>
  <!-- /.card-header -->
  <!-- form start -->
  <%= form_with(model: @todo, local: true, class: "form-horizontal") do |f| %>
    <div class="card-body">
      <div class="form-group row">
        <%= f.label :title, "Title", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_field :title, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :description, "Description", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.text_area :description, rows: 4, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :due_date, "Due Date", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.date_select :due_date, { order: [:year, :month, :day] }, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :priority, "Priority", class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
          <%= f.select :priority, options_for_select([['High', 'high'], ['Medium', 'medium'], ['Low', 'low']], @todo.priority), {}, class: "form-control" %>
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-10 offset-sm-2">
          <div class="form-check">
            <%= f.check_box :completed, class: "form-check-input" %>
            <%= f.label :completed, "Mark as Completed", class: "form-check-label" %>
          </div>
        </div>
      </div>
    </div>
    <!-- /.card-body -->
    <div class="card-footer">
      <%= f.submit "Update Todo", class: "btn btn-primary" %>
      <%= link_to "Back to Todos", todos_path, class: "btn btn-secondary" %>
    </div>
    <!-- /.card-footer -->
  <% end %>
</div>
