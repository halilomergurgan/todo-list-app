<div class="todo-list-container">
  <h1>Todo List</h1>

  <div class="add-task">
    <%= form_with(model: Todo.new, local: true) do |f| %>
      <%= f.text_field :title, placeholder: "Add new task..." %>
      <%= f.submit "Add Task", class: "btn btn-primary" %>
    <% end %>

    <select style="margin-left: 10px; padding: 5px;">
      <option>All</option>
      <option>Completed</option>
      <option>Pending</option>
    </select>
  </div>

  <ul class="task-list">
    <% @todos.each do |todo| %>
      <li class="<%= 'completed' if todo.completed %>">
        <span class="task-title"><%= todo.title %></span>
        <span class="task-priority badge <%= todo.priority %>">
        <%= todo.priority_label %>
      </span>
        <span class="task-due-date">
        Due: <%= todo.due_date.present? ? todo.due_date.strftime('%b %d, %Y') : '-' %>
      </span>
        <div class="task-actions">
          <%= link_to "âœï¸", edit_todo_path(todo) %>
          <%= link_to "ðŸ—‘ï¸", delete_todo_path(todo), method: :get, data: { confirm: "Are you sure?" }, class: 'btn btn-sm btn-danger delete-task' %>
          <% if !todo.completed %>
            <%= link_to "âœ”ï¸", complete_todo_path(todo), method: :get, data: { turbo: false, confirm: "Mark as completed?" }, class: 'btn btn-sm btn-success complete-task' %>
          <% else %>
            <%= link_to "ðŸ”„", revert_todo_path(todo), method: :get, data: { turbo: false, confirm: "Revert to incomplete?" }, class: 'btn btn-sm btn-warning revert-task' %>
          <% end %>
        </div>
      </li>
    <% end %>
  </ul>
</div>

<!-- CSS and JS Links -->
<link rel="stylesheet" href="/css/todo.css">
<script src="/js/todo.js"></script>
